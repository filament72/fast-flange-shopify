{%- liquid
	assign sid = section.id	
	
	assign block_first = section.blocks.first
	assign stt_layout = section.settings.layout
	assign stt_image_bg = section.settings.image_bg	

	if stt_layout == 't4s-se-container' 
		assign html_layout = '<div class="t4s-container">__</div></div>' | split: '__'
	elsif stt_layout == 't4s-container-wrap'
		assign html_layout = '<div class="t4s-container">__</div>' | split: '__'
	else
		assign html_layout = '__' | split: '__'
	endif
	assign use_button = false 
	assign use_carousel = false
	if section.settings.use_cus_css and section.settings.code_cus_css != blank
		assign t4s_se_class = 't4s_nt_se_' | append : sid
		render 'se_cus_css', code_cus_css: section.settings.code_cus_css, t4s_se_class: t4s_se_class
	endif 
-%}
{% render 'section_style', sid: sid -%}
<div class="t4s-section-inner t4s_se_{{ sid }} {{ stt_layout }}{% if stt_image_bg != blank and stt_layout != 't4s-se-container' %} t4s-has-imgbg lazyloadt4s{% endif %}" {% if stt_image_bg != blank and stt_layout != 't4s-se-container' %} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto"  data-optimumx="2"{% endif %}  >
  {{- html_layout[0] -}}
  {%- if stt_layout == 't4s-se-container' -%}
  <div class="t4s-container-inner{% if stt_image_bg != blank %} t4s-has-imgbg lazyloadt4s{% endif %}" {% if stt_image_bg != blank %} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto"  data-optimumx="2"{% endif %}>{% endif -%}
  <div class="t4s-image-text t4s-row t4s-align-items-center t4s-row t4s-gx-md-{{ section.settings.space_h_item }} t4s-gy-md-{{ section.settings.space_v_item }} t4s-gx-{{ section.settings.space_h_item_mb }} t4s-gy-{{ section.settings.space_v_item_mb }}">
    {%- for block in section.blocks -%}
      {%- liquid           
        assign image = block.settings.image 
        assign button_style = block.settings.button_style 
        assign forloop_index =  forloop.index
      -%}
      {%- case block.type -%}
        {%- when 'bl_image' -%}
          {%-liquid 
            assign index = 0 
            if block.settings.btn_owl == "outline"
              assign arrow_icon = 1
            else
              assign arrow_icon = 2
            endif

            assign show_btn = block.settings.show_btn
            if show_btn != "hidden"
              assign slider_btns = true
            else
              assign slider_btns = false
            endif
            assign show_dots = block.settings.show_dots
            if show_dots != "hidden"
              assign slider_dots = true
            else
              assign slider_dots = false
            endif
          -%}
          {%- capture html_img_text -%}
            {%- for i in (1..5) -%}
              {%- liquid 
                assign image_list = 'image' | append: i
                assign image = block.settings[image_list]
                if forloop.first
                  if image == blank
                    echo 'image' | placeholder_svg_tag: 't4s-placeholder-svg'
                  endif
                endif
              -%}
              {%- if block.settings.layout_des == "grid" -%}
                {%- if image != blank -%}
                  {%- assign index = index | plus: 1 -%}   
                  <div class="t4s-image-text-overlap-item" timeline hdt-reveal="slide-in">           
                    <img {% if image.presentation.focal_point != '50.0% 50.0%' %} style="object-position: {{ image.presentation.focal_point }};"{% endif %} class="lazyloadt4s" data-src="{{ image | image_url: width: 1 }}" data-widths="[400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">
                    <span class="lazyloadt4s-loader"></span>              
                  </div>
                {%- endif -%}
              {%- else -%}
                {%- if image != blank -%}
                  <div class="t4s-col-item" timeline hdt-reveal="slide-in">
                    <div class="t4s_ratio" style="--aspect-ratioapt:{{ image.aspect_ratio }}">
                      <img {% if image.presentation.focal_point != '50.0% 50.0%' %} style="object-position: {{ image.presentation.focal_point }};"{% endif %} class="lazyloadt4s" data-src="{{ image | image_url: width: 1 }}" data-widths="[400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">    
                      <span class="lazyloadt4s-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>
                    </div>
                  </div>
                {%- endif -%} 
              {%- endif -%} 
            {%- endfor -%}  
          {%- endcapture -%}
          {%-liquid
            if block.settings.post_mobile == "default"
              assign order_mobile = 1
            elsif block.settings.post_mobile == "reverse" and forloop_index == 1
              assign order_mobile = 2
            else
              assign order_mobile = 0
            endif
          -%}
          <div class="t4s-col-img t4s-col-item t4s-col-lg-{{ block.settings.col_item_dk }} t4s-col-md-{{ block.settings.col_item_tb }} t4s-col-12 t4s-order-md-{{ forloop_index }} t4s-order-{{ order_mobile }} t4s-image-text-layout-{{ block.settings.layout_des }} {% if block_first.type == 'bl_image' %}t4s-image-text-col-img-left{% else %}t4s-image-text-col-img-right{% endif %}"> 
            {%- if block.settings.layout_des == "grid" -%}
              <div class="t4s-image-text-overlap">
                <div class="t4s-image-text-overlap-centered t4s-image-text-overlap-{{ index }}">{{ html_img_text }}</div>
              </div> 
            {%- else -%}    
              {%- assign use_carousel = true -%}
              <div class="t4s-image-text-carousel t4s-flickity-slider t4s-row t4s-row-cols-lg-{{ block.settings.col_dk }} t4s-row-cols-md-{{ block.settings.col_tb }} t4s-row-cols-{{ block.settings.col_mb }} t4s-gx-lg-{{ block.settings.space_h_item }} t4s-gy-lg-{{ block.settings.space_v_item }} t4s-gx-md-{{ block.settings.space_h_item_tb }} t4s-gy-md-{{ block.settings.space_v_item_tb }} t4s-gx-{{ block.settings.space_h_item_mb }} t4s-gy-{{ block.settings.space_v_item_mb }} t4s_{{ block.settings.image_ratio }} t4s_position_{{ block.settings.image_position }} t4s_{{ block.settings.image_size }} {% if slider_btns == true %} t4s-slider-btn-{{ show_btn }} t4s-slider-btn-style-{{ block.settings.btn_owl }} t4s-slider-btn-{{ block.settings.btn_shape }} t4s-slider-btn-{{ block.settings.btn_size }} t4s-slider-btn-cl-{{ block.settings.btn_cl }} t4s-slider-btn-vi-{{ block.settings.btn_vi }}{% endif %}{% if slider_dots == true %} t4s-dots-layout-default t4s-slider-dots-{{ show_dots }} t4s-dots-width-{{ block.settings.dots_width }} t4s-dots-align-{{ block.settings.dots_align }} t4s-dots-design-{{ block.settings.dots_design }} t4s-dots-style-{{ block.settings.dot_owl }} t4s-dots-cl-{{ block.settings.dots_cl }} t4s-dots-round-{{ block.settings.dots_round }} t4s-dots-hidden-mobile-{{ slider_dots }} {% endif %} flickityt4s" data-flickityt4s-js='{ "arrowIcon":"{{ arrow_icon }}","imagesLoaded": 0,"adaptiveHeight": 1, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": {{ block.settings.loop }},"prevNextButtons": {{ slider_btns }},"percentPosition": 1,"pageDots": {{ slider_dots }}, "autoPlay" : {{ block.settings.au_time | times: 1000 }}, "pauseAutoPlayOnHover" : {{ block.settings.au_hover }} }' style="--space-dots: {{ block.settings.dots_space }}px;--flickity-btn-pos: {{ block.settings.space_h_item }}px;--flickity-btn-pos-mb: {{ block.settings.space_h_item_mb }}px;--dots-position-vertical: {{ block.settings.dots_pos_vy }}{{ block.settings.unit_dots_vertical }};--dots-pd-lr: {{ block.settings.dots_pd_lr }}px;--slideshow-btn-pos: {{ block.settings.btn_distance }}px;--dots-bottom-pos:20px">
                {{ html_img_text }}
              </div>  
            {%- endif -%}
          </div>
        {%- when 'bl_text' -%}
          <div class="t4s-col-text t4s-col-item t4s-col-lg-{{ block.settings.col_item_dk }} t4s-col-md-{{ block.settings.col_item_tb }} t4s-order-md-{{ forloop_index }} t4s-order-1 t4s-col-12 ">
            <div class="t4s-image-text-content t4s-text-{{ block.settings.txt_align }} t4s-shadow-wrap" style="--imtxt-subhd-color:{{ block.settings.subhd_color }};--imtxt-hd-color:{{ block.settings.hd_color }};--imtxt-des-color:{{ block.settings.des_color }}" timeline hdt-reveal="slide-in">
              {%- if block.settings.sub_heading != blank -%}<p class="t4s-image-text-subheading t4s-fs-md-16">{{ block.settings.sub_heading }}</p>{%- endif -%}
              {%- if block.settings.heading != blank -%}<h3 class="t4s-image-text-heading t4s-fs-md-38" >{{ block.settings.heading }}</h3>{%- endif -%}
              {%- if block.settings.text -%}<div class="t4s-image-text-des  t4s-fs-15 t4s-rte">{{ block.settings.text }}</div>{%- endif -%}
              {%- if block.settings.button_link != blank and block.settings.button_label != blank -%}
              {%- assign use_button = true -%}
                <a class="t4s-btn t4s-btn-base t4s-btn-style-{{ button_style }} t4s-btn-size-{{ block.settings.btn_size }} t4s-btn-color-{{ block.settings.btn_cl }} {% if button_style == 'default' or button_style == 'outline' %}t4s-btn-effect-{{ block.settings.button_effect }} t4s-btn-radius-{{ block.settings.btn_bdr }}{% endif %}" href="{{ block.settings.button_link }}"  target="{{ block.settings.open_link }}">{{ block.settings.button_label }} </a>
              {%- endif -%}
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
  {{- html_layout[1] -}}
