<!-- sections/heading-article-css.liquid -->
{%- style -%}
  {%- for block in section.blocks -%}
    
    {%- case block.type -%}
      {%- when 'title' -%}
      #MainContent .t4s-text-bl {
        {% if block.settings.font_italic == true %}
          font-style: italic !important;
        {% endif %}
        {% if block.settings.font_uppercase == true %}
          text-transform: uppercase;
        {% endif %}
        {% if block.settings.text_shadow == true %}
          text-shadow: 0 0 4px rgba(0, 0, 0, .4);
        {% endif %}
        {%- render 'bk_cus_style', type: 'heading_text', block: block, inline: 'false' -%}
        {%- if block.settings.text_lh == 0 -%}
          --text-lh: 1;
        {%- endif -%}
        {%- if block.settings.text_lh_tb == 0 -%}
          --text-lh-tb: 1;
        {%- endif -%}
        {%- if block.settings.text_lh_mb == 0 -%}
          --text-lh-mb: 1;
        {%- endif -%}
      }
      {%- when 'blog_title' -%}
      #MainContent .t4s-article-tags {
        --color: {{ block.settings.color }};
        --text-cl-trans: {{ block.settings.text_cl_trans }};
        --mgb: {{ block.settings.mgb }}px;
        --mgb-mb: {{ block.settings.mgb_mb }}px;
      }
      {%- when 'article_metas' -%}
      #MainContent .t4s-article-metas {
        --color: {{ block.settings.color }};
        --color2: {{ block.settings.color2 }};
        --mgb: {{ block.settings.mgb }}px;
        --mgb-mb: {{ block.settings.mgb_mb }}px;
      }
    {%- endcase -%}
  {%- endfor -%}
{%- endstyle -%}

