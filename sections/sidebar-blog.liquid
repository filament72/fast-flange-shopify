
{%- liquid 
    
    assign sid       = section.id
    assign design_mode = request.design_mode
    assign loadContent = false
    if content_for_header contains '\u0026section_id=' or content_for_header contains '?section_id='
        assign loadContent = true
    endif
    assign sidebar_size     = section.settings.size
    assign isSidebarDrawer  = section.settings.enable_drawer 
 -%}  
{%- if loadContent or design_mode -%}
    
    <template class="t4s-d-none ">
    [t4splitlz]
        <link rel="stylesheet" href="{{ 't4s-widget.css' | asset_url }}" media="all">
        {%- if section.blocks.size > 0 -%}
            <div class="t4s-sidebar-inner t4s-sidebar-blog t4s-current-scrollbar  t4s-drawer-{{ isSidebarDrawer }}" data-t4s-tabs style=" --border-cl:{{ section.settings.brcolor }}">
                <div class="t4s-row t4s-row-cols-1 t4s-gx-0" style="--fs: {{ section.settings.fs_heading }}px; --fw: {{ section.settings.fw_heading }}; --cl: {{ section.settings.cl_heading_sidebar }}; --space: {{ section.settings.space }}px;">
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                            {%- when 'blog_search' -%}
                                <div class="t4s-col-item t4s-widget t4s-widget-blog-search">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading">
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="t4s-widget-inner">
                                        <form data-frm-search action="{{ routes.search_url }}" method="get" class="t4s-search-sidebar__form t4s-align-items-center t4s-pr t4s-oh" role="search">
                                            <input type="hidden" name="type" value="article">
                                            <input type="hidden" name="options[prefix]" value="last">
                                            <input data-input-search class="t4s-search-sidebar__input t4s-input__currentcolor" autocomplete="off" type="text" name="q" placeholder="Search keyword...">
                                            <button class="t4s-search-sidebar__submit" type="submit"><svg class="t4s-icon t4s-icon--search" width="16px" height="16px" aria-hidden="true" focusable="false" role="presentation"><use href="#icon-h-search"></use></svg></button>
                                        </form> 
                                    </div>
                                </div>
                            {%- when 'blog_cate' -%}
                                {%- assign top_link_list = block.settings.cat_link_list -%}
                                {%- if top_link_list == blank -%}<p>{{ 'onboarding.no_content' | t }}</p>{% continue %}{% endif -%}
                                    <div class="t4s-col-item t4s-widget t4s-widget-blog-category t4s-cat-count-{{ block.settings.count }}">
                                        {%- if block.settings.title != blank -%}
                                            <div class="t4s-widget-heading">
                                                <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                            </div>
                                        {%- endif -%}
                                        <div class="t4s-widget-inner">
                                            <ul class="t4s-blog-categories">
                                                {%- for link in linklists[top_link_list].links -%}
                                                {%- if link.type != 'blog_link' %}{% continue %}{% endif -%}
                                                    <li class="t4s-blog-cat__item t4s-pr{%- if link.active %} t4s-current-cat{%- endif -%}">
                                                        <a href="{{ link.url }}">{%- render 'title_menu2', title: link.title -%} </a><span class="t4s-cat-count"> ({{ link.object.articles_count }})</span>
                                                    </li>
                                                {%- endfor -%}
                                            </ul>
                                        </div>
                                    </div>
                            {%- when 'gallery' -%}
                                {%- liquid
                                  assign open_link = block.settings.open_link
                                  assign ARRhtml1 = 'a,,' | split: ','
                                  assign ARRhtml2 = 'div,data-' | split: ','
                                -%}
                                <div id="t4s-sidebar-{{ block.id }}" class=" t4s-col-item t4s-widget t4s-widget-gallery t4s-tab-wrapper t4s-active" data-t4s-tab-wrapper data-no-auto-close {{ block.shopify_attributes }}>
                                    {%- if block.settings.heading != blank -%}
                                        <h5 class="t4s-widget-title">{{ block.settings.heading }}</h5>
                                    {%- endif -%}   
                                    <div id="b_{{ block.id }}"  class=" t4s_position_8 t4s_cover t4s-tab-content" data-t4s-tab-content style="display: block;">
                                        <div class="t4s-row t4s_ratio1_1 t4s-row-cols-{{ block.settings.col_dk }} t4s-row-cols-md-{{ block.settings.col_dk }} t4s-row-cols-lg-{{ block.settings.col_dk }} t4s-gx-{{ block.settings.space_item }} t4s-gy-{{ block.settings.space_item}}">
                                            {%- for i in (1..9) -%}
                                                {%- liquid
                                                    assign image_list = 'img' | append: i 
                                                    assign image_url_list = 'link' | append: i 
                                                    assign url = block.settings[image_url_list]
                                                    assign image = block.settings[image_list] 
                                                    if url == blank 
                                                        assign ARRhtml = ARRhtml2
                                                    else 
                                                        assign ARRhtml = ARRhtml1  
                                                    endif  
                                                -%}                                               
                                                {%- if image != blank -%}
                                                    <div class="t4s-col-item t4s-gallery-item">
                                                        <{{ ARRhtml[0] }} {{ ARRhtml[1] }}href="{{ url }}" {{ ARRhtml[2] }}target="{{ open_link }}" class="t4s-effect t4s-pr t4s-oh t4s-d-block">
                                                            <div class="t4s_ratio">
                                                                <img src="{{ image | image_url: width: 220 }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">
                                                            </div>
                                                        </{{ ARRhtml[0] }}>
                                                    </div>  
                                                {%- endif -%}                                            
                                            {%- endfor -%}
                                        </div>
                                    </div>
                                    {%- style -%}
                                        #t4s-sidebar-{{ block.id }} .t4s-gallery-item .t4s_ratio{border-radius: {{ block.settings.round }}%} 
                                    {%- endstyle -%}
                                </div>
                            {%- when 'post' -%} 
                            
                                {%- if block.settings.blog == blank -%}<p>{{ 'onboarding.no_content' | t }}</p>{% continue %}{%- endif -%} 
                                <div class="t4s-col-item t4s-widget t4s-sidebar-blog-post">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading">
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                   {%- liquid  
                                        assign blog = blogs[block.settings.blog]
                                        assign blog_url = blog.url
                                        assign blog_title = blog.title
                                        assign limit = section.settings.limit
                                        assign date_format = block.settings.date
                                        assign show_blog_title = block.settings.show_blog_title 
                                        assign show_date = block.settings.show_date 
    																		assign show_author = block.settings.show_author
                                        assign by_txt = 'blogs.article.by' | t
                                    -%}
                                    <div class="t4s-widget-inner"> 
                                        <div class="t4s-sidebar-post__list t4s-oh {{ block.settings.image_ratio }} {{ block.settings.image_position }} {{ block.settings.image_size }} ">
                                            {%- for article in blogs[block.settings.blog].articles limit: block.settings.limit_post -%}
                                                {%- render 'article_loop_2', article: article, by_txt: by_txt, show_date: show_date, show_author: show_author, image_ratio: block.settings.image_ratio, image_position: block.settings.image_position, image_size: block.settings.image_size, blog_url: blog_url, blog_title: blog_title, date_format: date_format, show_blog_title: show_blog_title -%}
                                            {%- endfor -%}
                                        </div>
                                    </div> 
                                </div>                         
                            {%- when 'instagram' -%}
                                {%- liquid
                                    assign limit = block.settings.limit
                                    if block.settings.mode == '1' 
                                        assign acc = block.settings.acc | default: settings.global_acc
                                    else
                                        assign acc = 'ins_19041994'
                                    endif -%}
                                <div class="t4s-col-item t4s-widget t4s-widget-instagram">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading"> 
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="t4s-widget-inner">
                                        <div class="t4s-row t4s_ratio1_1 t4s_position_8 t4s_cover t4s-row-cols-{{ block.settings.col_dk }} t4s-row-cols-md-{{ block.settings.col_dk }} t4s-row-cols-lg-{{ block.settings.col_dk }} t4s-gx-{{ block.settings.space_item }} t4s-gy-{{ block.settings.space_item }}" data-inst4s-options='{ "id": "{{ block.settings.col_dk }}{{ block.settings.col_tb }}{{ block.settings.col_mb }}{{ block.settings.limit }}{{ block.settings.open_link }}","limit": {{ limit }}, "acc": {{ acc | base64_encode | json }}, "target": "{{ block.settings.open_link }}" }'><div class="t4s-loading--bg"></div></div>
                                        <template class="t4s-icons-ins-svg"><svg class="t4s-svg-ins-image" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22,15.5,18.55,11a2,2,0,0,0-3.14,0L12,15.27a2,2,0,0,1-3,.18l-1.1-1.07a2,2,0,0,0-2.81,0L2,17.5V20a2,2,0,0,0,2,2H20a2,2,0,0,0,2-2Z"></path><rect x="2" y="2" width="20" height="20" rx="2"></rect><line x1="6.99" y1="7" x2="7" y2="7" stroke-linecap="round" stroke-width="2.5"></line></svg>[t4split]<svg class="t4s-svg-ins-video" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="5" width="14" height="14" rx="2"></rect><path d="M16,10l4.55-2.28a1,1,0,0,1,1.45.9v6.76a1,1,0,0,1-1.45.9L16,14" stroke-linecap="round"></path></svg>[t4split]<svg class="t4s-svg-ins-album" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="14" height="14" rx="2"></rect><path d="M20,22H10a2,2,0,0,1-2-2V16h6a2,2,0,0,0,2-2V8h4a2,2,0,0,1,2,2V20A2,2,0,0,1,20,22Z"></path></svg></template>
                                    </div>
                                    {%- style -%}
                                        #t4s-sidebar-{{ block.id }} .t4s-col-ins a{border-radius: {{ block.settings.round }} %} 
                                    {%- endstyle -%}
                                </div> 
                            {%- when 'text' -%}
                                <div class="t4s-col-item t4s-widget t4s-sidebar-text">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading"> 
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="t4s-widget-inner">
                                        {%- if block.settings.text_html != blank -%}{{ block.settings.text_html }}{%- endif -%}
                                    </div>
                                </div>
                            {%- when 'html' -%}
                                <div class="t4s-col-item t4s-widget t4s-sidebar-html t4s-rte--list">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading">
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="t4s-widget-inner">
                                        {%- if block.settings.custom_html != blank -%}{{ block.settings.custom_html }}{%- endif -%}
                                    </div>
                                </div>
                            {%- when 'custom_liquid' -%}
                                <div class="t4s-col-item t4s-widget t4s-sidebar-custom-liquid ">
                                    {%- if block.settings.title != blank -%}
                                        <div class="t4s-widget-heading">
                                            <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                        </div>
                                    {%- endif -%}
                                    <div class="t4s-widget-inner">
                                        {%- if block.settings.custom_liquid != blank -%}{{ block.settings.custom_liquid }}{%- endif -%}
                                    </div>
                                </div>
                            {%- when 'cus_menu' -%}
                              <div class="t4s-col-item t4s-widget t4s-cus-menu">
                                {%- if block.settings.title != blank -%}
                                  <div class="t4s-widget-heading">
                                    <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                  </div>
                                {%- endif -%}
                                <div id="b_{{ block.id }}" class="t4s-sidebar-menu t4s-menu-style-{{ block.settings.menu_style | default: "default" }} t4s-menu-boder_{{ block.settings.use_bd }}" style="--space-item: {{ block.settings.space_item }}px;--space-item-tb: {{ block.settings.space_item_tb }}px;--space-item-mb: {{ block.settings.space_item_mb }}px;--mgb: {{ block.settings.mgb }}px;--mgb-tb: {{ block.settings.mgb_tb }}px;--mgb-mb: {{ block.settings.mgb_mb }}px;">
                                  <ul class="t4s-sidebar-linklist">
                                    {%- for link in block.settings.menu.links -%}
                                      <li>
                                        <a href="{{ link.url }}" class="t4s-sidebar-link {% if link.current %}t4s-sidebar-link-active{% endif %}" {% if link.current %} aria-current="page"{% endif %}>
                                          {%- render 'title_menu2', title: link.title -%}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                </div>
                              </div>
                            {%- when 'slide' -%}
                              <div class="t4s-col-item t4s-widget t4s-blog-sidebar-slider ">
                                <link rel="stylesheet" href="{{ 't4s-slider-settings.css' | asset_url }}" media="all">
                                <link rel="stylesheet" href="{{ 'pre_flickityt4s.min.css' | asset_url }}" media="all">
                                <link rel="stylesheet" href="{{ 'pre_flickity_custom.css' | asset_url }}" media="all">
                                <link rel="stylesheet" href="{{ 't4s-button-style.css' | asset_url }}" media="all">
                                {%- if block.settings.title != blank -%}
                                  <div class="t4s-widget-heading">  
                                    <h5 class="t4s-widget-title">{{ block.settings.title }}</h5>
                                    <div class="t4s-flicky-btn__custom t4s-pa t4s-flickity-slider t4s-slider-btn__ontop-content t4s-slider-btn-show_all t4s-slider-btn-style-default t4s-slider-btn-none t4s-slider-btn-small t4s-slider-btn-cl-dark t4s-slider-btn-vi-hover">
                                      <button class="flickityt4s-button t4s-pe-auto flickityt4s-prev-next-button previous btn__prev--{{ sid }}" type="button" aria-label="Previous">
                                          <svg class="flickityt4s-button-icon" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 65,95 L 20,50  L 65,5 L 60,0 Z" class="arrow"></path></svg>
                                          <span class="t4s-flicky-btn-text">{{ 'general.carousel.previous' | t }}</span>
                                      </button>
                                      <button class="flickityt4s-button t4s-pe-auto flickityt4s-prev-next-button next btn__next--{{ sid }}" type="button" aria-label="Next">
                                          <svg class="flickityt4s-button-icon" viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 65,95 L 20,50  L 65,5 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                                          <span class="t4s-flicky-btn-text">{{ 'general.carousel.next' | t }}</span>
                                      </button>  
                                    </div>
                                  </div>
                              {%- endif -%}
                                <div class="t4s-section-content t4s-base-slider t4s-pr t4s_box_slider t4s_{{ block.settings.image_ratio }} t4s_position_{{ block.settings.image_position }} t4s_{{ block.settings.image_size }} t4s-row t4s-row-cols-lg-1 t4s-flickity-slider flickityt4s flickityt4s-later" data-flickityt4s-js='{"setPrevNextButtons":true,"arrowIcon":"2","imagesLoaded": 0,"adaptiveHeight": 0, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": false,"autoPlay": false,"prevNextButtons": true,"percentPosition": 1,"pageDots": false,"t4sid":"{{ sid }}", "pauseAutoPlayOnHover" : true ,"cellSelector":".t4s-article-item"}'>
                                  {%-liquid
                                    assign blog1 = block.settings.blog1
                                    assign b_effect = block.settings.b_effect
                                    assign img_effect = block.settings.img_effect
                                    assign date = block.settings.date
                                    assign by_txt = 'blogs.article.by' | t
                                    -%}
                                  {% for article in blog1.articles %}
                                    {%- liquid
                                      assign aid = article.id
                                      assign image = article.image
                                      assign article_url = article.url 
                                    -%}
                                    <article class="t4s-col-item t4s-article-item t4s-article-style t4s-article-{{ aid }}">
                                      <div class="t4s-article-inner t4s-pr t4s-oh">
                                        {%- if image != blank -%}
                                          <div class="t4s-article-thumb t4s-pr t4s-eff t4s-eff-{{ b_effect }} t4s-eff-img-{{ img_effect }}">
                                            <a class="t4s-article-img t4s-d-block" href="{{ article_url }}">
                                              <div
                                                class="t4s_ratio t4s-bg-11"
                                                style="background: url({{ image | image_url: width: 1 }});--aspect-ratioapt: {{ image.aspect_ratio | default: 2 }}"
                                                data-cacl-slide>
                                                <img class="lazyloadt4s t4s-lz--fadeIn t4s-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto"src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}"height="{{ image.height }}"alt="{{ image.alt | escape }}" loading="lazy">
                                              </div>
                                            </a>
                                          </div>
                                        {%- endif -%}
                                        <div class="t4s-article-info t4s-pa">
                                          <h3 class="t4s-article-title">
                                            <a href="{{ article_url }}">{{ article.title }}</a>
                                          </h3>
                                            <div class="t4s-article-metas">
                                              <div class="t4s-article-author">
                                                <span class="t4s-article-author__by">{{ by_txt }}</span>
                                                <span class="t4s-article-author__name">{{ article.author | replace_first: 'ad clnt', 'admin' }}</span>
                                              </div>
                                              <div class="t4s-article-time">
                                                <time class="t4s-entry-date">
                                                  {%- if date contains "%" -%}
                                                  {{ article.published_at | time_tag: date }}
                                                {%- else -%}	
                                                  {{ article.published_at | time_tag: format: date }}
                                                {%- endif -%}
                                                </time>
                                              </div>
                                            </div>
                                        </div>
                                      </div>
                                    </article>
                                  {% endfor %}
                                </div>
                              </div>
														{%- when 'socials_infos' -%}
															<div class="t4s-col-item t4s-widget t4s-socials_info">
																{% if block.settings.show_socials %}
																	<div class="t4s-sidebar-socials">
																		<div class="t4s-widget-heading">
																			<span class="t4s-widget-title t4s-d-block ">{{ 'blogs.infos.share' | t }}</span>
																		</div>
																		<div class="t4s-article-block t4s-article-tags-socials">
																			{% if block.settings.show_socials %}
																			{% liquid 
																					assign pri_cl_lightness = block.settings.pri_cl | color_extract: 'lightness'
																					assign pri_hover_cl_lightness = block.settings.pri_hover_cl | color_extract: 'lightness'
																					if pri_cl_lightness < 85
																							assign pri_cl2 = "#fff"
																					else 
																							assign pri_cl2 = "#000"
																					endif
																					if pri_hover_cl_lightness < 85
																							assign pri_hover_cl2 = "#fff"
																					else 
																							assign pri_hover_cl2 = "#000"
																					endif
																			-%}
																			{{ 't4s-icon-social.css' | asset_url | stylesheet_tag }}
																			<div class="t4s-article-socials" style="--pri-cl: {{ block.settings.pri_cl }};--pri-cl2: {{ pri_cl2 }};--pri-hover-cl: {{ block.settings.pri_hover_cl }};--pri-hover-cl2: {{ pri_hover_cl2 }};--mgb: 0px;--mgb-tb: 0px;--mgb-mb: 0px; --bd-radius: {{ block.settings.bd_radius }}px;">
																				{%- if block.settings.social_mode == '1' -%}{%- assign follow_social = true -%} {%- endif -%} 
																				{%- render 'social_sharing', bid: block.id, is_social_dropdown: true, style: block.settings.social_style, use_color_set: block.settings.use_color_set, size: block.settings.social_size, space_h_item: block.settings.space_h_item, space_h_item_mb: block.settings.space_h_item_mb, space_v_item: block.settings.space_v_item, space_v_item_mb: block.settings.space_v_item_mb, follow_social: follow_social -%} 
																			</div> 
																		{% endif %}
																	</div>
																</div>
																{% endif %}
																<div class="t4s-sidebar-infos">
																{% if block.settings.show_author %}
																	<div class="t4s-article-author">
																		<div class="t4s-widget-heading">
																			<span class="t4s-widget-title t4s-d-block t4s-sidebar-info-text">{{ 'blogs.infos.writter_by' | t }}</span>
																		</div>
																		<span class="t4s-article-author__name"> {{ article.author | replace_first: 'ad clnt', 'admin' }}</span>
																	</div>
																{% endif %}
																{% if block.settings.show_date %}
																	<div class="t4s-article-time">
																		<div class="t4s-widget-heading">
																			<span class="t4s-widget-title t4s-d-block t4s-sidebar-info-text">{{ 'blogs.infos.date' | t }}</span>
																		</div>
																		<time class="t4s-entry-date">{{ article.published_at | time_tag: format: "abbreviated_date" }}</time>
																	</div>
																{% endif %}
															</div>
                        {%- endcase -%}  
                    {%- endfor -%}
                </div>
            </div>
        {%- else -%}
            <span class="t4s-onboarding-info">{{ 'onboarding.no_content' | t }}</span>
        {%- endif -%}
    [t4splitlz]
        <link rel="stylesheet" href="{{ 't4s-drawer.min.css' | asset_url }}" media="all">
        <link rel="stylesheet" href="{{ 't4s-widget.css' | asset_url }}" media="all">
        <div id="drawer-{{ sid }}" class="t4s-drawer t4s-drawer__left t4s-sidebar-blog-drawer" aria-hidden="true">
            <div class="t4s-drawer__header"><span>{{ 'general.sidebar.title' | t }}</span><button class="t4s-drawer__close" data-drawer-close aria-label="{{ 'general.sidebar.close' | t }}"><svg class="t4s-iconsvg-close" role="presentation" viewBox="0 0 16 14"><path d="M15 0L1 14m14 0L1 0" stroke="currentColor" fill="none" fill-rule="evenodd"></path></svg></button></div>
            <div class="t4s-drawer__content">
                <div class="t4s-drawer__main t4s-current-scrollbar">[t4splitlz2]</div>
