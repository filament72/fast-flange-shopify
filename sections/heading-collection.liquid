{%- liquid
  if collection.image != blank and section.settings.use_specify_image 
    assign image = collection.image 
  else 
    assign image = section.settings.image
  endif 
  assign bg_opacity = section.settings.bg_opacity | divided_by: 100.0
-%}
{%- capture append_style -%}
  {% if image.presentation.focal_point != '50.0% 50.0%' %}--background-position: {{ image.presentation.focal_point }};{% endif %}
{%- endcapture -%}
<style>
  .is--header-transparent #t4s-heading-page {
    --space-padding-top-dk: {{ section.settings.padding_top_trans }}px !important;
    --space-padding-top-tb: {{ section.settings.padding_top_tb_trans }}px !important;
    --space-padding-top-mb: {{ section.settings.padding_top_mb_trans }}px !important;
    --space-padding-bottom-dk: {{ section.settings.padding_bottom_trans }}px !important;
    --space-padding-bottom-tb: {{ section.settings.padding_bottom_tb_trans }}px !important;
    --space-padding-bottom-mb: {{ section.settings.padding_bottom_mb_trans }}px !important;
    --bg-cl: {{ section.settings.color_trans }}!important;
    --op: {{ section.settings.overlay_trans | divided_by: 100.0 }}!important;
  }
  {%- if section.settings.show_border -%}
    .is--header-transparent .t4s-section-header .t4s-header__wrapper::after {
      content: "";
      border-bottom: 1px solid{{ section.settings.cl_bd_trans }};
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      opacity: {{ section.settings.border_cl_trans | divided_by: 100.0 }}
    }
  {%- endif -%}
</style>
{{ 't4s-heading-template.css' | asset_url | stylesheet_tag }}
{{ 't4s-general-block.css' | asset_url | stylesheet_tag }}
<div id="t4s-heading-page" class="t4s-header-banner t4s-pr t4s-border-{{ section.settings.box_border }}{% if section.settings.parallax == true %} t4s-parallax t4s-parallax-bg{% endif %}{% if image != blank %} lazyloadt4s{% endif %}" {% if section.settings.parallax == true %}data-parallax-t4strue{% endif %} {%- if image != blank -%} data-bgset="{{ image | image_url: width: 1 }}" data-sizes="auto" data-optimumx="1" {%- endif -%}
  {% render 'style_heading', bg_opacity: bg_opacity, append_style: append_style %}>
  {%- if section.blocks.size > 0 -%}
    <div class="t4s-page-head t4s-oh t4s-text-{{ section.settings.content_align }}">
      <div class="t4s-container t4s-pr">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '1' -%}
              {%- assign general_block = true -%}

              <h1 class="t4s-title-head t4s-bl-item t4s-animation-none t4s-text-bl t4s-fnt-fm-{{ block.settings.fontf }} t4s-font-italic-{{ block.settings.font_italic }} t4s-uppercase-{{ block.settings.font_uppercase }} t4s-hidden-mobile-{{ block.settings.hidden_mobile }} t4s-hidden-br-mb-{{ block.settings.remove_br_tag }} t4s-text-shadow-{{ block.settings.text_shadow }}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', block: block -%}>{{ collection.title }}</h1>

            {%- when '2' -%}
              {%- liquid
                if block.settings.content == blank
                  continue
                endif
                assign general_block = true
              -%}
              <div class="t4s-desc-head t4s-bl-item t4s-animation-none t4s-text-bl t4s-fnt-fm-{{ block.settings.fontf }} t4s-font-italic-{{ block.settings.font_italic }} t4s-uppercase-{{ block.settings.font_uppercase }} t4s-hidden-mobile-{{ block.settings.hidden_mobile }} t4s-hidden-br-mb-{{ block.settings.remove_br_tag }} t4s-text-shadow-{{ block.settings.text_shadow }}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', block: block -%}>{{ block.settings.content }}</div>

            {%- when '3' -%}
              <nav class="t4s-breadcrumbs" role="navigation" aria-label="breadcrumbs" style="--brc-cl: {{ block.settings.breadcrumb_color }};--brc-cl-link: {{ block.settings.breadcrumb_color_link }};--brc_mgb: {{ block.settings.brc_mgb }}px;--brc_mgb-tb: {{ block.settings.brc_mgb_tb }}px;--brc_mgb-mb: {{ block.settings.brc_mgb_mb }}px;--brc-cl-trans: {{ block.settings.breadcrumb_cl_trans }};--brc-cl-link-trans: {{ block.settings.breadcrumb_color_link_trans }};">
                <ul class="t4s-breadcrumbs__list">
                  <li class="t4s-breadcrumbs__item">
                    <a href="{{ routes.root_url }}" class="t4s-dib">{{ 'general.breadcrumb.home' | t }}</a>
                    <span class="t4s-space-db">/</span>
                  </li>
                  {%- if current_tags -%}
                    <li class="t4s-breadcrumbs__item">
                      {{ collection.title | link_to: collection.url }}<span class="t4s-space-db">/</span>
                    </li>
                    <li class="t4s-breadcrumbs__item" aria-current="page">
                      <span>{{ current_tags | join: ", " }}</span>
                    </li>
                  {%- else -%}
                    <li class="t4s-breadcrumbs__item" aria-current="page">
                      <span>{{ collection.title }}</span>
                    </li>
                  {%- endif -%}
                </ul>
              </nav>
            {%- when '4' -%}
              {%- liquid
                assign cl_des = collection.description
                if cl_des == blank
                  continue
                endif
                assign general_block = true
              -%}
            {%- capture view_more -%}
              {%- if block.settings.view_more and block.settings.viewm_txt != blank and collection.description != blank -%}
                <a href="#t4s-desc-collection" class="t4s-cl-des-viewm" data-go-id data-no-instant>{{ block.settings.viewm_txt }}</a>
              {% endif -%}
            {%- endcapture -%}
              <div class="t4s-desc-head t4s-bl-item t4s-animation-none t4s-text-bl t4s-fnt-fm-{{ block.settings.fontf }} t4s-font-italic-{{ block.settings.font_italic }} t4s-uppercase-{{ block.settings.font_uppercase }} t4s-hidden-mobile-{{ block.settings.hidden_mobile }} t4s-hidden-br-mb-{{ block.settings.remove_br_tag }} t4s-text-shadow-{{ block.settings.text_shadow }}{% if block.settings.design_des == "show_all" %} t4s-rte{% endif %}" id="b_{{ block.id }}" {%- render 'bk_cus_style', type: 'heading_text', block: block -%}>
                {%- if block.settings.design_des == "show_all" -%}
                  {{ cl_des }}
                {%- else -%}
                {{- cl_des | strip_html | truncatewords: block.settings.length -}}<br>{{ view_more }}{%- endif -%}
              </div>
            {%- when '5' -%}
              {{ 't4s-top-collections.css' | asset_url | stylesheet_tag }}
              {{ 't4s-slider-settings.css' | asset_url | stylesheet_tag }}
              {{ 'pre_flickityt4s.min.css' | asset_url | stylesheet_tag }}
              <link href="{{ 't4s-loading.css' | asset_url }}" rel="stylesheet" media="print" onload="this.media='all'">
              <style>
                {%- if block.settings.show_thumb_cl == false -%}
                  .t4s-top-collections .t4s-thumb-cl {
                    display: none;
                  }
                {%- endif -%}
              </style>
              {%- liquid 
                assign slide_true = false
                assign free_scroll = true
                if block.settings.custom_items
                  assign free_scroll = false
                endif
                if block.settings.nav_btn or block.settings.custom_items
                  assign slide_true = true
                endif
                assign collection_handle = collection.handle
                assign check_cate = false
                capture current 
                  cycle 1, 2, 3, 4, 5, 6
                endcapture
              -%}
              {%- capture html_els -%}
                {%- assign se_sort = block.settings.sort_collections -%}
                {%- assign show_thumb_cl = block.settings.show_thumb_cl -%}
                {%- if block.settings.source == '1' and collections.size > 0 -%}
                  {%- case se_sort -%}
                    {%- when 'products_high' or 'products_low' -%}
                    {%- assign collections = collections | sort: 'all_products_count' -%}
                    {%- when 'date' or 'date_reversed' -%}
                    {%- assign collections = collections | sort: 'published_at' -%}
                  {%- endcase -%}
                  {%- if se_sort == 'products_low' or se_sort == 'date' or se_sort == 'alphabetical' -%}
                    {%- for category in collections -%}
                      {%- if category.products.size == 0 %}
                        {% continue %}{% endif %}
                      {%- assign check_cate = true -%}
                      <div class="t4s-col-auto t4s-col-item t4s-cat-item{% if collection_handle == category.handle %} t4s-current-cat{% endif %}">
                        <a data-main-filters-link class="cat_link" href="{{ category.url }}">
                          {%- if show_thumb_cl -%}
                            {%- assign image = category.image | default: category.products.first.featured_image -%}
                            {% if image != blank %}
                              <div class="t4s_ratio t4s-thumb-cl">
                                <img class="lazyloadt4s t4s-lz--fadeIn t4s-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">
                                <span class="lazyloadt4s-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>
                              </div>
                            {% else %}
                              <div class="t4s_ratio t4s-thumb-cl">
                                {{ 'collection-' | append: current | placeholder_svg_tag: 't4s-placeholder-svg t4s-obj-eff' }}
                              </div>
                            {% endif %}
                          {%- endif -%}
                          <span>{{ category.title }}</span>
                        </a>
                      </div>
                    {%- endfor -%}
                  {%- else -%}
                    {%- for category in collections reversed -%}
                      {%- if category.products.size == 0 %}
                        {% continue %}{% endif %}
                      {%- assign check_cate = true -%}
                      <div class="t4s-col-auto t4s-col-item t4s-cat-item{% if collection_handle == category.handle %} t4s-current-cat{% endif %}">
                        <a class="cat_link dib" href="{{ category.url }}">
                          {%- if show_thumb_cl -%}
                            {%- assign image = category.image | default: category.products.first.featured_image -%}
                            {% if image != blank %}
                              <div class="t4s_ratio t4s-thumb-cl">
                                <img class="lazyloadt4s t4s-lz--fadeIn t4s-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">
                                <span class="lazyloadt4s-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>
                              </div>
                            {% else %}
                              <div class="t4s_ratio t4s-thumb-cl">{{ 'collection-' | append: current | placeholder_svg_tag: 't4s-placeholder-svg t4s-obj-eff' }}</div>
                            {% endif %}
                          {%- endif -%}
                          <span>{{ category.title }}</span>
                        </a>
                      </div>
                    {%- endfor -%}
                  {%- endif -%}
                {%- elsif block.settings.source == '2' and block.settings.collection_list != blank -%}
                  {%- for category in block.settings.collection_list -%}
                    {%- assign check_cate = true -%}
                    <div class="t4s-col-auto t4s-col-item t4s-cat-item{% if collection_handle == category.handle %} t4s-current-cat{% endif %}">
                      <a class="cat_link dib" href="{{ category.url }}">
                        {%- if show_thumb_cl -%}
                          {%- assign image = category.image | default: category.products.first.featured_image -%}
                          {% if image != blank %}
                            <div class="t4s_ratio t4s-thumb-cl">
                              <img class="lazyloadt4s t4s-lz--fadeIn t4s-obj-eff" data-src="{{ image | image_url: width: 1 }}" data-widths="[400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}" loading="lazy">
                              <span class="lazyloadt4s-loader is-bg-img" style="background: url({{ image | image_url: width: 1 }});"></span>
                            </div>
                          {% else %}
                            <div class="t4s_ratio t4s-thumb-cl">
                              {{ 'collection-' | append: current | placeholder_svg_tag: 't4s-placeholder-svg t4s-obj-eff' }}
                            </div>
                          {% endif %}
                        {%- endif -%}
                        <span>{{ category.title }}</span>
                      </a>
                    </div>
                  {%- endfor -%}
                {%- endif -%}
              {%- endcapture -%}
              {% if collections.size > 0 and check_cate %}
                <div class="t4s-top-collections t4s-hidden-mobile-{{ block.settings.hidden_mobile }} t4s-nav-{{ block.settings.nav_btn }} {% if block.settings.show_thumb_cl -%}t4s-custom-items-{{ block.settings.custom_items }} {%- endif %} t4s_ratio1_1 t4s_position_8 t4s_cover is-col-mb-{{ block.settings.col_mb }}" {% if block.settings.custom_items and block.settings.show_thumb_cl -%}style="--col-dk:{{ block.settings.col_dk }};--col-tb:{{ block.settings.col_tb }};--col-mb:{{ block.settings.col_mb }};"{%- endif -%}>
                  <div class="t4s-top-list-collections t4s-row t4s-g-0 t4s-align-items-center t4s-justify-content-center t4s-fnt-fm-{{ block.settings.fontf }} t4s-font-italic-{{ block.settings.font_italic }} t4s-uppercase-{{ block.settings.font_uppercase }} t4s-flickity-slider t4s-slider-btn-style-simple t4s-slider-btn-none t4s-slider-btn-small t4s-slider-btn-vi-always flickityt4s" data-flickityt4s-js='{"isSimple": true, "cellAlign": "center", "freeScroll": {{ free_scroll }}, "initialIndex": ".t4s-current-cat", "setPrevNextButtons": {{ slide_true }}, "arrowIcon": "1", "imagesLoaded": 0,"adaptiveHeight": 0, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "wrapAround": false,"prevNextButtons": {{ slide_true }},"percentPosition": 0,"pageDots": false, "pauseAutoPlayOnHover" : true }' style="--text-cl-trans:{{ block.settings.text_cl_trans }};--text-cl:{{ block.settings.text_cl }};--text-fs:{{ block.settings.text_fs }}px;--text-fw:{{ block.settings.text_fw }};--text-lh:{{ block.settings.text_lh }}px;--text-ls:{{ block.settings.text_ls }}px;--space-item:{{ block.settings.space_item }}px;">{{ html_els }}</div>
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
  {%- if general_block -%}
    {{ 't4s-general-block.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
</div>
