																									<a href="{{ blog_url }}/tagged/{{ tag | handle }}">{{ tag | remove: 'blog_' | strip }}</a>
																									{%- unless forloop.last -%}
																										<span class="t4s-seperate"></span>
																									{% endunless -%}
																								{%- endfor -%}
																						</div>
