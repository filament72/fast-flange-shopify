																			{%- for tag in article_tags -%}
																				{%- if tag contains 'blog_' -%}
																					<a href="{{ blog_url }}/tagged/{{ tag | handle }}">{{ tag | remove: 'blog_' | strip }}</a>
																						{%- unless forloop.last -%}
																							<span class="t4s-seperate"></span>
																						{% endunless -%}
																				{%- endif -%}
																			{%- endfor -%}
																		</div>
                                    <h1 class="t4s-bl-item t4s-animation-none t4s-text-bl t4s-uppercase-title ">{{ article.title }}</h1>
                                    <div class="t4s-article-metas {% if block.settings.content_align == " t4s-text-start" %} t4s-justify-content-start {% elsif block.settings.content_align == "t4s-text-end" %} t4s-justify-content-end {% elsif block.settings.content_align == "t4s-text-center" %} t4s-justify-content-center {% endif %}">
                                      <div class="t4s-article-author">
                                        <span class="t4s-article-author__by t4s-article-metas-title">{{ 'blogs.article.by' | t }} </span><span class="t4s-article-author__name"> {{ article.author | replace_first: 'ad clnt', 'admin' }}</span>
