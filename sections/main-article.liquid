                                <div class="t4s-article-social  hiden-socials-{{ block.settings.hiden_socials }} {% if block.settings.show_socials == true %} t4s-col-item t4s-col-lg-1 t4s-col-md-1 {% endif %}">
																	{% if block.settings.show_socials %}
                                    {% liquid 
                                        assign pri_cl_lightness = block.settings.pri_cl | color_extract: 'lightness'
                                        assign pri_hover_cl_lightness = block.settings.pri_hover_cl | color_extract: 'lightness'
