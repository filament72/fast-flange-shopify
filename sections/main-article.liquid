                                {{ 't4s-icon-social.css' | asset_url | stylesheet_tag }}
                                <div class="t4s-article-socials" style="--pri-cl: {{ block.settings.pri_cl }};--pri-cl2: {{ pri_cl2 }};--pri-hover-cl: {{ block.settings.pri_hover_cl }};--pri-hover-cl2: {{ pri_hover_cl2 }};--mgb: 0px;--mgb-tb: 0px;--mgb-mb: 0px; --bd-radius: {{ block.settings.bd_radius }}px;">
                                    {%- if block.settings.social_mode == '1' -%}{%- assign follow_social = true -%} {%- endif -%} 
