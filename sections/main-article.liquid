                                      <div class="t4s-article-time">
                                        <span class="t4s-article-metas-title">{{ 'blogs.article.on' | t }} </span>
                                        <time class="t4s-entry-date">{{ article.published_at | time_tag: format: "abbreviated_date" }}</time>
                                      </div>
                                        {%- if article.comments_count > 0 %}{% assign cm_link = '#comments' %}{% else %}{% assign cm_link = '#CommentForm' %}{% endif -%}
