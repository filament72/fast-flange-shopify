                                            <a href="{{ article_url }}{{ cm_link }}" class="t4s-d-inline-block">
                                              <span class="t4s-article-comment__icon"></span><span class="t4s-article-comment__count">{{ 'blogs.comments.with_count_html' | t: count: article.comments_count }}</span>
                                            </a>
                                          </div>
                                      </div>
                                    </div>
                                    <article id="t4s-article-{{ article_id }}" class=" t4s-rte article-{{ article_id }}">
                                      {{ article.content | replace: '<blockquote>', '<blockquote class="t4s-blockquote"><svg class="t4s-icon t4s-icon--blockquote" aria-hidden="true" focusable="false" role="presentation"><use href="#t4s-icon-blockquote"></use></svg>' }}
                                    </article>                          
                                </div>
                            </div>
                        {%- when 'tags_socials' -%}
                          {% if block.settings.show_tags or block.settings.show_socials %}
                            <div class="t4s-article-block t4s-article-tags-socials t4s-main-area__{{ block.settings.content_width }}" style="--mgb:{{ block.settings.mgb }}px;--mgb-tb:{{ block.settings.mgb_tb }}px;--mgb-mb:{{ block.settings.mgb_mb }}px;">
                              {% if block.settings.show_tags %}
                                <div class="t4s-article-tags">
                                    {%- if article_tags.size > 0 -%}                             
                                        <ul class="t4s-article-tags__list t4s-article-tags__count-{{ block.settings.tags_count }}">
                                            {%- for tag in article_tags -%} 
                                              {%- if tag contains 'category_' -%}{%- continue -%}{%- endif -%}
                                                <li class="t4s-d-inline-block">
                                                    <a href="{{ blog_url }}/tagged/{{ tag | handle }}">{{ tag | remove : 'category_' | remove : 'blog_' | strip }}</a>{%- unless forloop.last -%} <span class="t4s-seperate"></span> {% endunless -%}
                                                </li>
                                            {%- endfor -%}
                                        </ul>
                                    {%- endif -%}
                                </div>  
                              {%- endif -%}   
