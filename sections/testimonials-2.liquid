                    <path d="M9 0L11.7255 6.00573L18 6.87539L13.41 11.4568L14.5623 18L9 14.8257L3.43769 18L4.59 11.4568L0 6.87539L6.27447 6.00573L9 0Z"/>
                  </svg>
                </div>
              </div>
              <div class="t4s-spec_image t4s-oh t4s_ratio" style="--aspect-ratioapt: {{ block.settings.image.aspect_ratio | default: 1 }}">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', width: block.settings.image.width, height: block.settings.image.height, class: '', sizes: '400px', widths: '375, 550, 750, 1100, 1500' }}
                {%- else -%}
