{%- liquid
  assign sid = section.id
  assign stt_layout = section.settings.layout
  assign stt_image_bg = section.settings.image_bg 
  if stt_layout == 't4s-se-container' 
   assign html_layout = '<div class="t4s-container">__</div></div>' | split: '__'
  elsif stt_layout == 't4s-container-wrap'
    assign html_layout = '<div class="t4s-container">__</div>' | split: '__'
  else
    assign html_layout = '__' | split: '__'
  endif

  assign status = false
  if section.settings.show_paginate != 'hidden'
    assign status = true
  endif
-%}
{% style %}
  .{{ sid }} button:focus-visible{
    outline:none;
    outline-offset:unset;
    box-shadow: none
  }
  .{{ sid }} .t4s-slide-numbers {
    padding: 0 20px;
    color:var(--secondary-color);
    display:inline-flex;
    gap:4px;
  }
  .{{ sid }} .t4s-wrap_btn_dot{
    border-radius: 999px;
    border: 1px solid var(--border-color);
    padding: 4px 12px;
    min-width: 150px;
    margin: 0 auto;
    margin-block-start: {{ section.settings.pagi_bottom_space | times: 0.5 }}px;
  }
  .{{ sid }} .t4s-flickity-slider .t4s-flicky-btn__custom-spec{
    left: 12px;
    right: 12px;
    bottom: 0;
    top: 0;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .{{ sid }} .t4s-flickity-slider .t4s-flicky-btn__custom-spec .flickityt4s-prev-next-button{
    width: 24px;
    height: 24px;
    display:inline-flex;
    justify-content: center;
    align-items: center;
    flex: 0 0 auto;
    transform: none;
    background: transparent;
    margin: 0;
    position: unset;
  }
  .{{ sid }} .t4s-pagi_show_mobile{
      display: inline-flex;
  }
  .{{ sid }} .t4s-pagi_show_all{
      display: inline-flex;
  }
  .{{ sid }} .t4s-rating.t4s-rate-5 svg{
    color:var(--rating-cl)
  }
  .{{ sid }} .t4s-rating.t4s-rate-4 svg:not(:nth-child(n+5)){
    color:var(--rating-cl)
  }
  .{{ sid }} .t4s-rating.t4s-rate-3 svg:not(:nth-child(n+4)){
    color:var(--rating-cl)
  }
  .{{ sid }} .t4s-rating.t4s-rate-2 svg:not(:nth-child(n+3)){
    color:var(--rating-cl)
  }
  .{{ sid }} .t4s-rating.t4s-rate-1 svg:not(:nth-child(n+2)){
    color:var(--rating-cl)
  }
  .{{ sid }} .t4s-rating.t4s-rate-0{
    display: none;
  }
  .{{ sid }} .t4s-spec_content{
    padding: 15px;
  }
  .{{ sid }} .t4s-spec_content > *{
    margin-bottom: 20px;
  }
  .{{ sid }} .t4s-spec_content .t4s-rating{
    margin-bottom:0;
    gap:4px;
  }
  .{{ sid }} .t4s-special-inner > *{
    flex: 1 0 100%
  }
  .{{ sid }} .t4s-content{
    color:var(--content-cl);
    font-size: 14px;
    font-weight: 300;
    line-height: 22px; 
  }
  .{{ sid }} .t4s-name{
    color: var(--name-cl);
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
  }
  .rtl_true .{{ sid }} .flickityt4s-button{
    transform: rotate(180deg) !important;
  }
  @media (min-width: 768px){
    .{{ sid }} .t4s-wrap_btn_dot{
      margin-block-start: {{ section.settings.pagi_bottom_space | times: 0.75 }}px;
    }
    .{{ sid }} .t4s-wrap_btn_dot{
      padding: 8px 12px;
    }
    .{{ sid }} .t4s-slide-numbers {
    padding: 0 40px;
    }
    .{{ sid }} .t4s-spec_content > *{
      margin-bottom: 25px;
    }
    .{{ sid }} .t4s-special-inner > *{
      flex: 1 0 50%
    }
    .{{ sid }} .t4s-spec_content{
      padding: 25px 25px;
      padding-inline-start:0;
    }
    .{{ sid }} .t4s-content{
      font-size: 20px;
      line-height: 36px; 
    }
    .{{ sid }} .t4s-name{
      font-size: 24px;
      line-height: 36px;
    }
  }
  @media (min-width: 1025px){
    .{{ sid }} .t4s-wrap_btn_dot{
      margin-block-start: {{ section.settings.pagi_bottom_space }}px;
    }
    .{{ sid }} .t4s-pagi_show_mobile{
      display: none;
    }
    .{{ sid }} .t4s-pagi_show_desktop{
      display: inline-flex;
    }
    .{{ sid }} .t4s-spec_content > *{
      margin-bottom: 32px;
    }
    .{{ sid }} .t4s-spec_content{
      padding: 40px 64px;
      padding-inline-start:0;
    }
  }
  @media (max-width: 767px){
    .{{ sid }} .t4s-spec_image{
      max-height: 300px;
    }
  }
