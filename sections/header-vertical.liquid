          "value": "0",
          "label": "Disable"
        },
        {
          "value": "1",
          "label": "Default"
        },
        {
          "value": "2",
          "label": "Left menu bar"
        },
        {
          "value": "3",
          "label": "Right menu bar"
        },
        {
          "value": "4",
          "label": "Center menu bar"
        },
        {
          "value": "5",
          "label": "Text box wrap"
        }
      ],
      "label": "Menu bar style",
      "info": "Main menu always show if you choose 'Menu bar Disable' ",
      "default": "0"
    },
    {
      "type": "select",
      "id": "hover_icon",
      "options": [
        {
          "value": "1",
          "label": "Simple"
        },
        {
          "value": "2",
          "label": "Zoom"
        },
        {
          "value": "3",
          "label": "Zoom and skew"
        }
      ],
      "label": "Hover effect icon",
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_language",
      "label": "Show language",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_currency",
      "label": "Show currency",
      "default": false
    },
    {
