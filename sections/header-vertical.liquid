      "id": "count_primary_color",
      "label": "Count primary color",
      "default": "#c91f28"
    },
    {
      "type": "color",
      "id": "count_secondary_color",
      "label": "Count secondary color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Bottom content"
    },
    {
      "type": "paragraph",
      "content": "+ Text/Social Bottom"
    },
    {
      "type": "select",
      "id": "source",
      "options": [
        {
          "value": "0",
          "label": "None"
        },
        {
          "value": "1",
          "label": "Text"
        },
        {
          "value": "2",
          "label": "Social share"
        },
        {
          "value": "3",
