{%- if block.settings.icon != blank %}
  <i class="{{ block.settings.icon }}"></i>
{% endif %}
<span class="t4s-txt"> {{ block.settings.title }}</span>
{% if showArrow %}
  {% if arrow_style == "long-arrow" %}
    <svg class="t4s-btn-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="18" height="18"><path d="M 21.1875 9.28125 L 19.78125 10.71875 L 24.0625 15 L 4 15 L 4 17 L 24.0625 17 L 19.78125 21.28125 L 21.1875 22.71875 L 27.90625 16 Z"></path></svg>
  {% else %}
    <svg class="t4s-icon-select-arrow" width="10" height="10" role="presentation" viewBox="0 0 19 12">
      <use xlink:href="#t4s-select-arrow"></use>
    </svg>
  {% endif %}
{% endif -%}
{% if block.settings.lb != blank %}
  {% assign color_lightness = block.settings.lb_cl | color_extract: 'lightness' %}<span class="t4s_lb_nav t4s-pa t4s-op-0" style="--bg-cl: {{block.settings.lb_cl}};background-color: {{block.settings.lb_cl}};color: {% if color_lightness < 85 %}#fff{% else %}#000{% endif %}">{{ block.settings.lb }}</span>
{% endif %}